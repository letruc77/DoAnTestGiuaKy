<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>Car Viet - LeoShop</title>
    <link href="~/css/form.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href='http://fonts.googleapis.com/css?family=Exo+2' rel='stylesheet' type='text/css'>
    <script type="text/javascript" src="~/js/jquery1.min.js"></script>
    <!-- start menu -->
    <link href="~/css/megamenu.css" rel="stylesheet" type="text/css" media="all" />
    <script type="text/javascript" src="~/js/megamenu.js"></script>

    <!--start slider -->
    <link href="~/css/fwslider.css" rel="stylesheet" />
    <script src="~/js/jquery-ui.min.js"></script>
    <script src="~/js/fwslider.js"></script>
    <script src="~/js/css3-mediaqueries.js"></script>
    <!--end slider -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/js/jquery.easydropdown.js"></script>
    @*@Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")
</head>
<body ng-app="CarShopApp">
    <!--Phần header-->
    @Html.Partial("~/Views/Shared/Header.cshtml")
    <!--Phần slider-->
    @Html.Partial("~/Views/Shared/Slider.cshtml")
    <!--Phần content-->
    @RenderBody()
    <!--Phần footer-->
    @Html.Partial("~/Views/Shared/Footer.cshtml")
    @*Phần này là phần include các script*@
    @*@Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/angular")
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/app/CarShopApp.js"></script>
    <script src="~/Scripts/app/Controller/HomeController.js"></script>
    <script src="~/Scripts/app/Controller/LoginController.js"></script>
    <script src="~/Scripts/app/Controller/CartController.js"></script>
    <script src="~/Scripts/app/Controller/PaymentController.js"></script>
    <script>$(document).ready(function () { $(".megamenu").megamenu(); });</script>
</body>
</html>
