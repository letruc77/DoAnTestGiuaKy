<div class="main" ng-controller="HomeController">
    <div class="wrap">
        <div class="section group">
            <div class="cont span_2_of_3">
                <h2 class="head">Xe mới nhất</h2>
                <div class="top-box">
                    <div ng-repeat="xe in ListXeNew">
                        <div class="col_1_of_3 span_1_of_3" style="margin-left:2%">
                            <a href="/Home/Single/{{xe.IdXe}}">
                            @*<a href="" ng-click="LoadChiTietXe(xe.IdXe)">*@
                                <div class="inner_content clearfix">
                                    <div class="product_image">
                                        <img src="~/Images/product/{{xe.Hinh1}}" alt="" />
                                    </div>
                                    <div class="sale-box"><span class="on_sale title_shop">Mới</span></div>
                                    <div class="price">
                                        <div class="cart-left">
                                            <p class="title">{{xe.TenXe}}</p>
                                            <div class="price1">
                                                <span class="actual">{{xe.GiaNiemYetXe | currency : "VNĐ " : 0}}</span>
                                            </div>
                                        </div>
                                        <div class="cart-right"> </div>
                                        <div class="clear"></div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="clear"></div>
                </div>
                <h2 class="head">Bán chạy nhất</h2>
                <div class="top-box">
                    <div ng-repeat="xe in ListXeBest">
                        <div class="col_1_of_3 span_1_of_3" style="margin-left:2%">
                            <a href="/Home/Single/{{xe.IdXe}}">
                                <div class="inner_content clearfix">
                                    <div class="product_image">
                                        <img src="~/Images/product/{{xe.Hinh1}}" alt="" />
                                    </div>
                                    <div class="sale-box"><span class="on_sale title_shop">Chạy nhất</span></div>
                                    <div class="price">
                                        <div class="cart-left">
                                            <p class="title">{{xe.TenXe}}</p>
                                            <div class="price1">
                                                <span id="currency-default">{{xe.GiaNiemYetXe | currency : "VNĐ " : 0}}</span>
                                            </div>
                                        </div>
                                        <div class="cart-right"> </div>
                                        <div class="clear"></div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
            <div class="rsidebar span_1_of_left">
                <div class="top-border"> </div>
                <div class="border">
                    <link href="css/default.css" rel="stylesheet" type="text/css" media="all" />
                    <link href="css/nivo-slider.css" rel="stylesheet" type="text/css" media="all" />
                    <script src="js/jquery.nivo.slider.js"></script>
                    <script type="text/javascript">
                        $(window).load(function () {
                            $('#slider').nivoSlider();
                        });
                    </script>
                    <div class="slider-wrapper theme-default">
                        <div id="slider" class="nivoSlider">
                            <img src="~/images/product/banner1.jpg" alt="banner1" />
                            <img src="~/images/product/banner2.jpg" alt="banner2" />
                            <img src="~/images/product/banner3.jpg" alt="banner3" />
                        </div>
                    </div>
                    <div class="btn"><a href="single.html">Check it Out</a></div>
                </div>
                <div class="top-border"> </div>
                <div class="sidebar-bottom">
                    <h2 class="m_1">Bảng tin<br>Đăng nhập</h2>
                    <p class="m_text">Xe và cuộc sống</p>
                    <div class="subscribe">
                        <form>
                            <input name="userName" type="text" class="textbox">
                            <input type="submit" value="Subscribe">
                        </form>
                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
</div>