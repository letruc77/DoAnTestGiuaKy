
@{
    ViewBag.Title = "Kho xe";
}
<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/admin/admin/adminhome">Admin</a>
        </li>
        <li class="breadcrumb-item active">Kho xe</li>
    </ol>
    <div class="row">

    </div>
</div>
<div class="card mb-3" ng-controller="Admin_KhoXe">
    <div class="card-header" style="float:left">
        <i class="fas fa-table"></i>
        Danh sách
        <span style="margin-left:70%">
            <button onclick="window.location.href = '/Admin/Products/ThemKhoXe'" class="btn btn-success">Thêm kho xe</button>
        </span>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tên kho xe</th>
                        <th>Địa chỉ</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="kx in ListKhoXe">
                        <td>{{kx.TenKho}}</td>
                        <td>{{kx.DiaChi}}</td>
                        <td>
                            <a href="/Admin/Products/CapNhatKho/{{kx.IdKhoXe}}" style="text-decoration:none">Cập nhật</a>
                            @*<button class="btn btn-success" ng-click="CapNhatKhoXe(kx)">Cập nhật</button>
                            <button class="btn btn-danger" ng-click="XoaKhoXe(kx)">Xóa kho xe</button>*@
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>